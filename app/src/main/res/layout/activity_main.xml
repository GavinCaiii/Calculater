<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.caitou.calculator.MainActivity"
    android:background="@android:color/black"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="5"
        android:background="@android:color/white">
        <EditText
            android:id="@+id/ed_display"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="right"
            android:textSize="30sp"
            android:textColor="@android:color/holo_orange_light" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_clear"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="C"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="D"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_l_bracket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="("
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_r_bracket"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text=")"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="７"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="８"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="９"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_divide"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="÷"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="４"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="５"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="６"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_multiply"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="×"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">
        <Button
            android:id="@+id/bt_1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="１"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="２"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="３"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_minus"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="-"
            android:onClick="onClick"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3">

        <Button
            android:id="@+id/bt_point"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="."
            android:onClick="onClick"/>

        <Button
            android:id="@+id/bt_0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="０"
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_equal"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="="
            android:onClick="onClick"/>
        <Button
            android:id="@+id/bt_add"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textStyle="italic"
            android:textSize="30sp"
            android:text="+"
            android:onClick="onClick"/>
    </LinearLayout>


</LinearLayout>
